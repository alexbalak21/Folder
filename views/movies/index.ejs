<h2>Search Movies</h2>
<form action="/movies" method="GET">
    <div class="form-row">
       <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%=searchOptions.title %>" />
    </div>
    </div>

    <div class="form-row">
        <div class="form-item">
        <label>Released After</label>
        <input type="date" name="releasedAfter" value="<%=searchOptions.releasedAfter %>" />
        </div>
        <div class="form-item">
        <label>Released Before</label>
        <input type="date" name="releasedBefore" value="<%=searchOptions.releasedBefore %>" />
        </div>
    </div>
    <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

    <% movies.forEach(movie => { %>
    <a href="/movies/<%=movie.id %> ">
        <img height="150" width="100" src="<%= movie.posterPath %> " />
    </a>
    <% }); %>

